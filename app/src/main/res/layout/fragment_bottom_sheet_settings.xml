<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clipToPadding="true"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:background="@android:color/white"
    app:behavior_peekHeight="1dp"
    android:id="@+id/bottom_sheet"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_btn_apply"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:text="Apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_btn_cancel"
            android:textSize="20sp"
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#0D000000"
        android:layout_marginBottom="10dp"
        android:layout_height="1dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="1990"
                android:id="@+id/text_year_be"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        <com.appyvet.rangebar.RangeBar
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rangebar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            custom:tickStart="1980"
            custom:barWeight="2dp"
            custom:selectorSize="8dp"
            custom:pinColor="#7CA1BB"
            custom:tickColor="@android:color/transparent"
            custom:rangeBarColor="#4D6474"
            custom:selectorColor="#7CA1BB"
            custom:connectingLineColor="#4D6474"
            custom:tickInterval="1"
            custom:tickEnd="2016"/>
            <TextView
                android:id="@+id/text_year_af"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="2016"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#0D000000"
            android:layout_marginBottom="10dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre"/>
        <com.greenfrvr.hashtagview.HashtagView
            android:id="@+id/tag_movie_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tagBackground="@drawable/tag_bg"
            app:tagTextColor="@android:color/white"
            android:layout_marginBottom="20dp"
            app:tagForeground="#85F5F5F5"
            app:temporaryPins="false"
            app:selectionMode="true">
        </com.greenfrvr.hashtagview.HashtagView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>